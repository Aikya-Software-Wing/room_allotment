@model ExamRoomAllocation.ViewModel.RoomViewModel


<div>
    <h4>Room</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SessionName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SessionName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TeacherName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TeacherName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ExamCode)
        </dt>
        
        <dd>
            @foreach(var exam in Model.ExamCode.ToList())
            {
                @Html.DisplayFor(modelItem => exam)
                <br />
            }            
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Students)
        </dt>

        <dd>
            @foreach (var student in Model.Students.ToList())
            {
                @Html.DisplayFor(modelItem => student)
                <br />
            }
        </dd>
    </dl>
</div>
<p>    
    @Html.ActionLink("Back to List", "Index","Results")
</p>
